{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ 生成活动文件",
            "command": "/usr/bin/clang++",  // 使用 clang++ 作为编译器
            "args": [
                "-fdiagnostics-color=always",  // 启用彩色诊断
                "-g",  // 生成调试信息
                "${file}",  // 当前打开的文件
                "-I", "/usr/local/include",  // 添加包含路径
                "-I", "/opt/homebrew/Cellar/boost/1.86.0_1/include", // 添加 Boost 路径
                "-I", "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include", // macOS SDK 路径
                "-o", "${fileDirname}/${fileBasenameNoExtension}",  // 输出文件
                "-std=c++23"  // 使用 C++23 标准
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]  // 使用 GCC 的问题匹配器
        }
    ]
}